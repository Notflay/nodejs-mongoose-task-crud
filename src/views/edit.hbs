<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <h1>Update a Task</h1>
        <form action="/edit/{{task._id}}" method="POST">

          <div class="mb-3"><input class="form-control rounded-0 bg-dark text-white" type="text" name="title"
              placeholder="Title" value="{{task.title}} " /></div>
          <div class="mb-3"><textarea class="form-control rounded-0 bg-dark text-white" name="description"
              placeholder="Add a Description" rows="3">{{task.description}}</textarea></div>

          <button class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>