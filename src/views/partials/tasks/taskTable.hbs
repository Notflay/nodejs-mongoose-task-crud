{{#if tasks}}
    <table class="table table-bordered table-hover table-dark">
        <thead>
            <tr>
                <th>N.</th>
                <th>Title</th>
                <th>Description</th>
                <th>Operations</th>
            </tr>
        </thead>

        <tbody>


            {{#each tasks}}

                <tr>
                    <td>{{@index}}</td>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>
                        {{#if done}}
                            <button id=`{{_id}}` class="btn btn-dark"><a href="/toggleDone/{{_id}}"
                                    text-decoration="overline">Undone</a></button>
                        {{else}}
                            <button id=`{{_id}}` class="btn btn-success"><a href="/toggleDone/{{_id}}">Done</a></button>
                        {{/if}}
                        <button class="btn btn-danger"><a href="/delete/{{_id}}">Delete</a></button>
                        <a href="/edit/{{_id}}" class="btn btn-info">Update</a>
                    </td>
                </tr>



            {{/each}}

        </tbody>

    </table>
{{else}}
    <div class="h-100 d-flex align-items-center justify-content-center">
        <div class="text-center text-white">
            <h1>No Tasks</h1>
            <img src="/icon/png-transparent-document-empty-file-format-page-paper-sheet-ui-essence-icon.png" alt=""
                width="45">
        </div>
    </div>
{{/if}}